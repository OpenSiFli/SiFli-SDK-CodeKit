{
  "configurations": [
    {
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions"
        // "--extensions-dir=${workspaceFolder}/.debug-extensions"
      ],
      "name": "Launch Extension",
      "request": "launch",
      "type": "extensionHost",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "compile-and-watch"
    },
    {
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensions-dir=${workspaceFolder}/.debug-extensions"
      ],
      "name": "Launch Extension (Watch Mode)",
      "request": "launch",
      "type": "extensionHost",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "watch"
    },
    {
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensions-dir=${workspaceFolder}/.debug-extensions"
      ],
      "name": "Launch Extension (Vue WebView)",
      "request": "launch",
      "type": "extensionHost",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "build-vue-webview"
    }
  ]
}
